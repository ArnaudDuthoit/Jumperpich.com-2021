{% extends 'base.html.twig' %}

{% block title %}Reset du mot de passe{% endblock %}

{% block body %}

    <div class="main" style="background: #000 url('{{ asset('pictures/login.jfif') }}') center no-repeat fixed">

        <div class="container mt-4 text-center">

            <div class="d-flex justify-content-center">

                <div class="box">

                    <h2>Reset du mot de passe</h2>

                    {{ form_start(resetForm) }}
                    {{ form_row(resetForm.plainPassword) }}
                    <button class="btn btn-primary btn__custom">Reset du mot de passe</button>
                    {{ form_end(resetForm) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}
